<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<%= link_to "Edit Post", edit_article_path(@article), class:"btn btn-danger m-2" %>
<%= link_to "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class:"btn btn-danger m-3" %>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
